<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane fx:id="gamePane"
            prefHeight="700.0"
            prefWidth="750.0"
            stylesheets="@/styles.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sudoku.controller.SudokuController">

    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>

    <!-- HEADER -->
    <top>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">

            <!-- title and icon  -->
            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
                <ImageView fitHeight="45.0" fitWidth="45.0" preserveRatio="true">
                    <image>
                        <Image url="https://cdn-icons-png.flaticon.com/512/10560/10560813.png" />
                    </image>
                </ImageView>

                <Label fx:id="gameTitle" text="Sudoku 404 ðŸŒ¿"
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #8B7355;">
                    <font>
                        <Font name="Georgia Bold" size="32.0" />
                    </font>
                </Label>
            </HBox>

        </VBox>
    </top>

    <!-- CENTRAL BOARD -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">

            <!-- sudoku's grid -->
            <GridPane fx:id="sudokuGrid"
                      alignment="CENTER"
                      hgap="0.0"
                      vgap="0.0"
                      style="-fx-background-color: #8B7355;
                             -fx-padding: 5;
                             -fx-background-radius: 10;
                             -fx-effect: dropshadow(gaussian, rgba(139, 115, 85, 0.3), 15, 0, 0, 5);">
            </GridPane>

            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
        </VBox>
    </center>

    <!-- FOOTER AND BUTTONS -->
    <bottom>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">

            <!-- buttons container -->
            <HBox alignment="CENTER" spacing="20.0" styleClass="button-container">

                <!-- Verify button -->
                <VBox alignment="CENTER" spacing="5">
                    <Button fx:id="checkButton"
                            onAction="#handleCheckBoard"
                            text="âœ“ Verify"
                            styleClass="game-button"
                            style="-fx-background-color: linear-gradient(to bottom, #9CAF88, #8A9D77);
                                   -fx-text-fill: white;">
                        <font>
                            <Font name="Georgia Bold" size="14.0" />
                        </font>
                    </Button>
                    <Label text="Check solution"
                           style="-fx-font-size: 10px; -fx-text-fill: #8B7355;" />
                </VBox>

                <!-- Restart button -->
                <VBox alignment="CENTER" spacing="5">
                    <Button fx:id="restartButton"
                            onAction="#handleRestartGame"
                            text="â†» Restart"
                            styleClass="game-button"
                            style="-fx-background-color: linear-gradient(to bottom, #D4A762, #C29752);
                                   -fx-text-fill: white;">
                        <font>
                            <Font name="Georgia Bold" size="14.0" />
                        </font>
                    </Button>
                    <Label text="New board"
                           style="-fx-font-size: 10px; -fx-text-fill: #8B7355;" />
                </VBox>

                <!-- Hint button -->
                <VBox alignment="CENTER" spacing="5">
                    <Button fx:id="helpButton"
                            onAction="#handleHelpOption"
                            text="ðŸ’¡ Hint"
                            styleClass="game-button"
                            style="-fx-background-color: linear-gradient(to bottom, #B8A98F, #A8997F);
                                   -fx-text-fill: white;">
                        <font>
                            <Font name="Georgia Bold" size="14.0" />
                        </font>
                    </Button>
                    <Label text="Request help"
                           style="-fx-font-size: 10px; -fx-text-fill: #8B7355;" />
                </VBox>

            </HBox>

            <!-- Status message -->
            <HBox alignment="CENTER"
                  style="-fx-background-color: rgba(255, 249, 230, 0.9);
                         -fx-background-radius: 12;
                         -fx-padding: 15;">
                <Label fx:id="messageLabel"
                       text="Relax, think, and enjoy solving it"
                       style="-fx-font-size: 14px;
                              -fx-font-weight: 600;
                              -fx-text-fill: #6D5C45;">
                    <font>
                        <Font name="Georgia" size="14.0" />
                    </font>
                </Label>
            </HBox>

            <BorderPane.margin>
                <Insets top="15.0" />
            </BorderPane.margin>
        </VBox>
    </bottom>

</BorderPane>